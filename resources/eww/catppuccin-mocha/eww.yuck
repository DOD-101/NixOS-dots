(include "vars.yuck")
(include "poll.yuck")

(include "components/bar0.yuck")

(defwindow BarWin0
  :monitor 0
  :stacking "foreground"
  :exclusive true
  :focusable false
  :geometry (geometry
    :x "5px"
    :y "10px"
    :width "99%"
    :height "10px"
    :anchor "top center"
  )
  (bar0
    :workspaces "[1, 2, 3]"
    :playing_monitor 0
  )
)

